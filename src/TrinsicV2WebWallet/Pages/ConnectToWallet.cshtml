@page
@model TrinsicV2WebWallet.Pages.ConnectToWalletModel
@{
    ViewData["Title"] = "Wallet, create proof";
}

<h2>Create proof for univeristy Diploma, Connect to Wallet </h2>

<form method="post">
    <div class="card">
        <div class="card-content">
            <span class="card-title">Connect to Wallet</span>

            <div class="row card-text">
                <div class="input-field col col-12 col-md-12">
                    <input type="text" required asp-for="@Model.Email" id="Email" />
                    <label for="Email">Email *</label>
                </div>
            </div>

            <div class="row card-text">
                <div class="input-field col col-12 col-md-12">
                    <button type="submit" class="btn btn-primary col-sm-10">Connect</button>
                </div>
            </div>

        </div>
    </div>
</form>
