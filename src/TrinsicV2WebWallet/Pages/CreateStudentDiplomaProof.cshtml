@page "{Email}"
@model TrinsicV2WebWallet.Pages.CreateStudentDiplomaProofModel
@{
    ViewData["Title"] = "Wallet, create proof";
}

<h2>Create proof for univeristy Diploma </h2>

<form method="post">
    <div class="card">
        <div class="card-content">
            <span class="card-title">Create a proof of your diploma</span>

            <input type="hidden" required asp-for="@Model.Email" id="Email" />

            <div class="row card-text">
                <div class="input-field col col-12 col-md-12">
                    <input type="text" required asp-for="@Model.Code" id="Code" />
                    <label for="Code">Code *</label>
                </div>
            </div>

            <div class="row card-text">
                <div class="input-field col col-12 col-md-12">
                    <button type="submit" class="btn btn-primary col-sm-10">Create</button>
                </div>
            </div>

        </div>
    </div>
</form>

<br />
<br />

<p>The proof can be shared with the verifier application</p>

<p>@Model.ProofDocumentJson</p>
